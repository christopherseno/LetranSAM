@model IEnumerable<ARManila.Models.GetEnrollmentStat2_Result>

<!-- Table Sections (.js-table-sections class is initialized in Helpers.cbTableToolsSections()) -->
@Html.ActionLink("Download PDF", "PrintEnrollmentStat", "FinanceReports", new { pid = ViewBag.PeriodID, sdate = ViewBag.EDate }, new { @class="btn btn-primary" } )
<hr />
<div class="table-responsive">
    <table class="js-table-sections table table-hover table-bordered table-sm table-vcenter border-secondary">
        <thead class="thead-dark text-center text-white border-primary bg-primary">
            <tr>
                <th rowspan="2">
                    <div class="btn-group-sm">
                        <button id="close" class="btn btn-sm"><i class="fa fa-arrow-up text-white"></i></button>
                    </div>
                    <div class="btn-group-sm">
                        <button id="open" class="btn"><i class="fa fa-arrow-down text-white"></i></button>
                    </div>

                </th>
                <th rowspan="2">Department</th>
                <th rowspan="2">Year Level</th>
                <th rowspan="2">Projected</th>
                <th colspan="2">Assessed To date</th>
                <th colspan="2">Assessed Today</th>
                <th colspan="2">Enrolled To date</th>
                <th colspan="2">Enrolled Today</th>
                <th rowspan="2">Cancelled</th>
                <th colspan="4">Payment Summary</th>
            </tr>
            <tr>
                <th>All</th>
                <th>New</th>
                <th>All</th>
                <th>New</th>
                <th>All</th>
                <th>New</th>
                <th>All</th>
                <th>New</th>
                <th class="fs-xs">Cash</th>
                <th class="fs-xs">Installment</th>
                <th class="fs-xs">Monthly</th>
                <th class="fs-xs">Total</th>
            </tr>
        </thead>
        <tbody id="cbaa" class="js-table-sections-header border-primary show table-active">
            <tr>
                <td class="text-center">
                    <i class="fa fa-angle-right"></i>
                </td>
                <td class="fw-semibold" colspan="17">CBAA</td>
            </tr>
        </tbody>
        <tbody>
            @foreach (var cbaa in Model)
            {
                if (cbaa.AcaAcronym == "CBAA")
                {
                    <tr class="text-center">
                        <td class="text-center"></td>
                        <td class="text-center"></td>
                        <td class="fw-semibold text-primary">@cbaa.GradeYear</td>
                        <td class="fs-sm">@cbaa.Projected</td>
                        <td class="fs-sm">@cbaa.AssTodate</td>
                        <td class="fs-sm bg-primary-lighter">@cbaa.AssessmentToDateFCount</td>
                        <td class="fs-sm">@cbaa.AssToday</td>
                        <td class="fs-sm bg-primary-lighter">@cbaa.AssessmentTodayFCount</td>
                        <td class="fs-sm">@cbaa.EnrTodate</td>
                        <td class="fs-sm bg-primary-lighter">@cbaa.EnrollmentToDateFCount</td>
                        <td class="fs-sm">@cbaa.EnrToday</td>
                        <td class="fs-sm bg-primary-lighter">@cbaa.EnrollmentTodayFCount</td>
                        <td class="fs-sm">@cbaa.Cancelled</td>
                        <td class="fs-sm">@cbaa.Cash</td>
                        <td class="fs-sm">@cbaa.Installment</td>
                        <td class="fs-sm">@cbaa.Monthky</td>
                        <td class="fs-sm">@cbaa.Total</td>
                    </tr>
                }

            }
        </tbody>
        <tbody id="ceit" class="js-table-sections-header border-primary show table-active">
            <tr>
                <td class="text-center">
                    <i class="fa fa-angle-right"></i>
                </td>
                <td class="fw-semibold" colspan="17">CEIT</td>
            </tr>
        </tbody>
        <tbody>
            @foreach (var ceit in Model)
            {
                if (ceit.AcaAcronym == "CEIT")
                {
                    <tr class="text-center">
                        <td class="text-center"></td>
                        <td class="text-center"></td>
                        <td class="fw-semibold text-primary">@ceit.GradeYear</td>
                        <td class="fs-sm">@ceit.Projected</td>
                        <td class="fs-sm">@ceit.AssTodate</td>
                        <td class="fs-sm bg-primary-lighter">@ceit.AssessmentToDateFCount</td>
                        <td class="fs-sm">@ceit.AssToday</td>
                        <td class="fs-sm bg-primary-lighter">@ceit.AssessmentTodayFCount</td>
                        <td class="fs-sm">@ceit.EnrTodate</td>
                        <td class="fs-sm bg-primary-lighter">@ceit.EnrollmentToDateFCount</td>
                        <td class="fs-sm">@ceit.EnrToday</td>
                        <td class="fs-sm bg-primary-lighter">@ceit.EnrollmentTodayFCount</td>
                        <td class="fs-sm">@ceit.Cancelled</td>
                        <td class="fs-sm">@ceit.Cash</td>
                        <td class="fs-sm">@ceit.Installment</td>
                        <td class="fs-sm">@ceit.Monthky</td>
                        <td class="fs-sm">@ceit.Total</td>
                    </tr>
                }

            }
        </tbody>
        <tbody id="clas" class="js-table-sections-header border-primary show table-active">
            <tr>
                <td class="text-center">
                    <i class="fa fa-angle-right"></i>
                </td>
                <td class="fw-semibold" colspan="17">CLAS</td>
            </tr>
        </tbody>
        <tbody>

            @foreach (var clas in Model)
            {
                if (clas.AcaAcronym == "CLAS")
                {
                    <tr class="text-center">
                        <td class="text-center"></td>
                        <td class="text-center"></td>
                        <td class="fw-semibold text-primary">@clas.GradeYear</td>
                        <td class="fs-sm">@clas.Projected</td>
                        <td class="fs-sm">@clas.AssTodate</td>
                        <td class="fs-sm bg-primary-lighter">@clas.AssessmentToDateFCount</td>
                        <td class="fs-sm">@clas.AssToday</td>
                        <td class="fs-sm bg-primary-lighter">@clas.AssessmentTodayFCount</td>
                        <td class="fs-sm">@clas.EnrTodate</td>
                        <td class="fs-sm bg-primary-lighter">@clas.EnrollmentToDateFCount</td>
                        <td class="fs-sm">@clas.EnrToday</td>
                        <td class="fs-sm bg-primary-lighter">@clas.EnrollmentTodayFCount</td>
                        <td class="fs-sm">@clas.Cancelled</td>
                        <td class="fs-sm">@clas.Cash</td>
                        <td class="fs-sm">@clas.Installment</td>
                        <td class="fs-sm">@clas.Monthky</td>
                        <td class="fs-sm">@clas.Total</td>
                    </tr>
                }

            }

        </tbody>
        <tbody id="coe" class="js-table-sections-header border-primary show table-active">
            <tr>
                <td class="text-center">
                    <i class="fa fa-angle-right"></i>
                </td>
                <td class="fw-semibold" colspan="17">CoE</td>
            </tr>
        </tbody>
        <tbody>

            @foreach (var coe in Model)
            {
                if (coe.AcaAcronym == "CoE")
                {
                    <tr class="text-center">
                        <td class="text-center"></td>
                        <td class="text-center"></td>
                        <td class="fw-semibold text-primary">@coe.GradeYear</td>
                        <td class="fs-sm">@coe.Projected</td>
                        <td class="fs-sm">@coe.AssTodate</td>
                        <td class="fs-sm bg-primary-lighter">@coe.AssessmentToDateFCount</td>
                        <td class="fs-sm">@coe.AssToday</td>
                        <td class="fs-sm bg-primary-lighter">@coe.AssessmentTodayFCount</td>
                        <td class="fs-sm">@coe.EnrTodate</td>
                        <td class="fs-sm bg-primary-lighter">@coe.EnrollmentToDateFCount</td>
                        <td class="fs-sm">@coe.EnrToday</td>
                        <td class="fs-sm bg-primary-lighter">@coe.EnrollmentTodayFCount</td>
                        <td class="fs-sm">@coe.Cancelled</td>
                        <td class="fs-sm">@coe.Cash</td>
                        <td class="fs-sm">@coe.Installment</td>
                        <td class="fs-sm">@coe.Monthky</td>
                        <td class="fs-sm">@coe.Total</td>
                    </tr>
                }

            }

        </tbody>
        <thead class="border-primary">
            <tr class="bg-primary text-white">
                <td class="fw-semibold" colspan="3">Total</td>
                <td class="text-center">@ViewBag.StatTotal.Projected</td>
                <td class="text-center">@ViewBag.StatTotal.AssTodate</td>
                <td class="text-center">@ViewBag.StatTotal.AssessmentToDateFCount</td>
                <td class="text-center">@ViewBag.StatTotal.AssToday</td>
                <td class="text-center">@ViewBag.StatTotal.AssessmentTodayFCount</td>
                <td class="text-center">@ViewBag.StatTotal.EnrTodate</td>
                <td class="text-center">@ViewBag.StatTotal.EnrollmentToDateFCount</td>
                <td class="text-center">@ViewBag.StatTotal.EnrToday</td>
                <td class="text-center">@ViewBag.StatTotal.EnrollmentTodayFCount</td>
                <td class="text-center">@ViewBag.StatTotal.Cancelled</td>
                <td class="text-center">@ViewBag.StatTotal.Cash</td>
                <td class="text-center">@ViewBag.StatTotal.Installment</td>
                <td class="text-center">@ViewBag.StatTotal.Monthky</td>
                <td class="text-center">@ViewBag.StatTotal.Total</td>
            </tr>
        </thead>
    </table>
</div>

<!-- END Table Sections -->

<script>
    Codebase.helpersOnLoad(['cb-table-tools-sections']);
</script>

<script type="text/javascript">


    $(document).ready(function () {
        $("#open").click(function () {
            $("#cbaa").addClass('show table-active');
            $("#ceit").addClass('show table-active');
            $("#clas").addClass('show table-active');
            $("#coe").addClass('show table-active');
        });
        $("#close").click(function () {
            $("#cbaa").removeClass('show table-active');
            $("#ceit").removeClass('show table-active');
            $("#clas").removeClass('show table-active');
            $("#coe").removeClass('show table-active');
        });
        /*$('#statoptions').html('<button type="button" class="btn-block-option" data-toggle="block-option" data-action="fullscreen_toggle"></button>');*/
    });

</script>
