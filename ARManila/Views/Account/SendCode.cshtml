@model ARManila.Models.SendCodeViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Send";
}

<div class="login-box">
    <div class="login-logo">
        <img src="~/Images/LetranBataanLogoSmall.png" />
    </div>
    <div class="card">
        <div class="card-body login-card-body">
            <h3 class="font-weight-bolder text-center">Finance Module</h3>
            @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("rememberMe", @Model.RememberMe)
                <h4>Send verification code</h4>
                <hr />
                <div class="row">
                    <div class="col-md-8">
                        Select Two-Factor Authentication Provider:
                        @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>