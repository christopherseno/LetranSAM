@model ARManila.Models.Tuition
@{
    ViewBag.Title = "Create Tuition Fee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4">@ViewBag.Title</h2>

            @using (Html.BeginForm("CreateTuition", "FeeSetup", FormMethod.Post, new { @class = "needs-validation" }))
            {
                @Html.AntiForgeryToken()

                <div class="card">
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Year Level <span class="text-danger">*</span></label>
                                    @Html.TextBoxFor(m => m.YearLevel, new { @class = "form-control", type = "number", required = "required" })
                                    @Html.ValidationMessageFor(m => m.YearLevel, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Payment Mode <span class="text-danger">*</span></label>
                                    @Html.DropDownListFor(m => m.PaymodeID, (SelectList)ViewBag.PaymodeID, "-- Select --", new { @class = "form-select", required = "required" })
                                    @Html.ValidationMessageFor(m => m.PaymodeID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Amount <span class="text-danger">*</span></label>
                                    @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
                                    @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Downpayment</label>
                                    @Html.TextBoxFor(m => m.Downpayment, new { @class = "form-control", type = "number", step = "0.01" })
                                    @Html.ValidationMessageFor(m => m.Downpayment, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Program</label>
                                    @Html.DropDownListFor(m => m.ProgramID, (SelectList)ViewBag.ProgramID, "-- Select --", new { @class = "form-select" })
                                    @Html.ValidationMessageFor(m => m.ProgramID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Curriculum</label>
                                    @Html.DropDownListFor(m => m.CurriculumID, (SelectList)ViewBag.CurriculumID, "-- Select --", new { @class = "form-select" })
                                    @Html.ValidationMessageFor(m => m.CurriculumID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Chart of Accounts</label>
                                    @Html.DropDownList("AcctID", (SelectList)ViewBag.AcctID, "-- Select --", new { @class = "form-select" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Sub Chart of Accounts</label>
                                    @Html.DropDownList("SubAcctID", (SelectList)ViewBag.SubAcctID, "-- Select --", new { @class = "form-select" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Fee Name</label>
                            @Html.DropDownList("FeeNameID", (SelectList)ViewBag.FeeNameID, "-- Select --", new { @class = "form-select" })
                        </div>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}