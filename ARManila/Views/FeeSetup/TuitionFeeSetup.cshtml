@model IEnumerable<ARManila.Models.Tuition>

@{
    ViewBag.Title = "Tuition Fee Setup";
}

<div class="content">
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">Tuition Fees</h3>
            <div class="block-options">
                @Html.ActionLink("Add Tuition Fee", "CreateTuition", null, new { @class = "btn btn-sm btn-alt-primary" })
            </div>
        </div>
        <div class="block-content">
            <table class="table table-bordered table-striped table-vcenter js-dataTable-full">
                <thead>
                    <tr>
                        <th>Program</th>
                        <th>Pay Mode</th>
                        <th class="text-end">Down Payment</th>
                        <th class="text-center" style="width:120px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.ProgramID.HasValue ? item.Progam.ProgramCode : "")</td>
                            <td>@item.Paymode.Description</td>                                                        
                            <td class="text-end">@(item.Downpayment.HasValue ? item.Downpayment.Value.ToString("#,##0.00") : "")</td>
                            <td class="text-center">
                                @Html.ActionLink("Edit", "EditTuition", new { id = item.FeeID }, new { @class = "btn btn-sm btn-alt-primary me-1" })
                                <a href="#" class="btn btn-sm btn-alt-danger" onclick="ConfirmDelete('@item.FeeID', '@(item.Progam != null ? item.Progam.ProgramCode : "this item")')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="confirmdelete" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Delete tuition for: <strong id="modalmessage"></strong>?</p>
                <div id="modallink"></div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        function ConfirmDelete(id, message) {
            document.getElementById("modalmessage").textContent = message;
            document.getElementById("modallink").innerHTML =
                '<a href="/FeeSetup/DeleteTuition/' + id + '" class="btn btn-danger">Confirm Delete</a>' +
                ' <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>';
            $("#confirmdelete").modal('show');
        }
    </script>
}
