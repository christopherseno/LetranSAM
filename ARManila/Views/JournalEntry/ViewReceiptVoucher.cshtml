@model IEnumerable<ARManila.Models.QneDb.Receipts>

@{
    ViewBag.Title = "ViewReceiptVoucher";
}

<h2>View Receipt Voucher</h2>
<form method="get" action="ViewReceiptVoucher">
    <input type="date" class="col-md-8" required value="@ViewBag.OrDate" name="OrDate" />
    <input type="submit" value="View" />
</form>
<table class="table table-bordered table-striped table-vcenter js-dataTable-full">
    <thead>
        <tr>
            <th>
                Receipt Code
            </th>
            <th>
                Debtor Name
            </th>
            <th>
                Project
            </th>
            <th>
                Description
            </th>
            <th>
                GL Account Code
            </th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            foreach (var paycode in item.ReceiptDetails)
            {
                <tr>
                    <td>
                        @item.ReceiptCode
                    </td>
                    <td>
                        @item.DebtorName
                    </td>
                    <td>@(item.Projects != null ? item.Projects.ProjectCode:"")</td>
                    <td>@paycode.Description</td>
                    <td>@paycode.GLAccounts.GLAccountCode</td>
                    <td align="right">@paycode.Amount.Value.ToString("#,##0.00")</td>
                </tr>
            }
        }
    </tbody>
</table>
