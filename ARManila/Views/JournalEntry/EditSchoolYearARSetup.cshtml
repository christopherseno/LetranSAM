@model ARManila.Models.SchoolYear

@{
    ViewBag.Title = "EditSchoolYearARSetup";
}

<h2>Edit School Year - AR Setup</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SYID)

        <div class="form-group">
            <label class="col-md-2">School Year</label>
            <span class="col-md-8">
               @Model.SchoolYearName
            </span>
        </div>

        <div class="form-group">
            <label class="col-md-2">QNE GL Code</label>
            @Html.DropDownListFor(model => model.QNEAccountCode, (SelectList)ViewBag.qne, "", new { htmlAttributes = new { @class = "col-md-8" } })
            @Html.ValidationMessageFor(model => model.QNEAccountCode, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "SchoolYearARSetup")
</div>
