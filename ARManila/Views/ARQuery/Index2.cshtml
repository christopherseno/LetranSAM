@model ARManila.Models.ARWrapper
@{
    ViewBag.Title = "AR Query Page";
}


<div class="content">

    <nav class="breadcrumb push bg-body-extra-light rounded-pill px-4 py-2">
        <span class="breadcrumb-item">Student Menu</span>
        <span class="breadcrumb-item active">Student's Account Ledger</span>
    </nav>


    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-sm-3">
                <div class="mb-4">
                    <input type="button" class="btn btn-sm rounded-pill btn-outline-danger" id="studentfinderbutton" value="Student No Finder" />
                </div>
                <div class="mb-4">
                    <div class="input-group">
                        @*<div class="col-xs-2">*@
                        <input type="text" class="form-control" id="studentno" name="studentno" placeholder="Student No" />
                        @*</div>*@
                        <input type="submit" value="Search" class="btn btn-primary" id="search" />
                    </div>
                </div>
                <div class="mb-4">
                    <input type="checkbox" class="form-check-input" id="usedefault" name="usedefault" />
                    <label class="form-check-label" for="usedefault">Use Latest Enrollment</label>
                </div>
            </div>
            <div class="col-sm-9">
                <div class="block block-rounded">
                    @if (Model != null && Model.Student != null)
                    {
                        <div class="block-header block-header-default">
                            <h3 class="block-title"><b>@Model.Student.StudentNumber</b> - @Model.Student.StudentName</h3>
                            @if (Model.Student.ValidationDate != null)
                            {
                                <div class="block-options">
                                    <div class="block-options-item text-success">@Model.Student.ValidationDate.Value.ToString("MMMM dd, yyyy")</div>
                                </div>
                            }
                        </div>

                        <div class="block-content">
                            <div class="table-responsive">
                                <table class="table table-borderless">
                                    <tr>
                                        <th>Period : <span class="fw-light">@Model.Student.Period</span></th>
                                        <th>Section : <span class="fw-light">@Model.Student.Section</span></th>
                                        <th>Remark : <span class="fw-light">@Model.ARRemark</span></th>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="block-header block-header-default">
                            <h3 class="block-title fw-bold text-warning">No Student Record Found For this Schooy Year/Term</h3>
                        </div>
                        <div class="block-content">
                            <p>Please try to CHANGE PERIOD or check the USE LATEST ENROLLMENT</p>
                        </div>
                    }
                </div>
            </div>
        </div>

    }

    @if (Model != null && Model.ARItems != null)
    {
        @*<h3>@Model.Student.StudentNumber - @Model.Student.StudentName </h3>
            <h4>@Model.Student.Period</h4>
            <h4>@Model.Student.Section</h4>
            <h4>@Model.ARRemark</h4>*@
        <div class="block block-rounded">
            <div class="block-content">
                <div class="table-responsive">
                    <table id="arquerytable" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr class="bg-gray-light">
                                <th>Particular</th>
                                <th class="text-center">Debit</th>
                                <th class="text-center">Credit</th>
                                <th class="text-end">Doc No</th>
                                <th class="text-center">Doc Date</th>
                                <th class="text-center">Remark</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ARItems)
                            {
                                <tr>
                                    <td>@item.Particular</td>
                                    <td align="center">@(item.Debit == 0 ? "" : item.Debit.ToString("#,##0.00") )</td>
                                    <td align="center">@(item.Credit == 0 ? "" : item.Credit.ToString("#,##0.00"))</td>
                                    <td align="right">@item.DocumentNo</td>
                                    <td align="center">@(item.DocumentDate.HasValue ? item.DocumentDate.Value.ToShortDateString() : "" )</td>
                                    <td align="center">@item.Remark</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        if (Model.ARDueDates != null && Model.ARDueDates.Count > 0)
        {
            <div class="block block-themed">
                <div class="block-header bg-pulse-light">
                    <h3 class="block-title">Schedule of Payments</h3>
                </div>
                <div class="block-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            @foreach (var item in Model.ARDueDates)
                            {
                                <tr>
                                    <td>@item.Payment</td>
                                    <td align="right">@item.Amount.ToString("#,##0.00")</td>
                                    <td align="right">@item.DueDate</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        }

        <div class="block block-rounded">
            <div class="block-content block-content-full">
                <div class="text-end">
                    <i class="si si-wallet fa-2x text-success"></i>
                </div>
                <div class="row py-2 text-center">
                    <div class="col-12 col-lg-4 col-xs-12 border-end">
                        <div class="fs-3 fw-semibold">
                            ₱
                            @if (Model.TotalDebit.HasValue)
                            {
                                @Model.TotalDebit.Value.ToString("#,##0.00")
                            }
                        </div>
                        <div class="fs-sm fw-semibold text-uppercase text-muted">Total Debit</div>
                    </div>
                    <div class="col-12 col-lg-4 col-sm-12">
                        <div class="fs-3 fw-semibold">
                            ₱
                            @if (Model.TotalCredit.HasValue)
                            {
                                @Model.TotalCredit.Value.ToString("#,##0.00")
                            }
                        </div>
                        <div class="fs-sm fw-semibold text-uppercase text-muted">Total Credit</div>
                    </div>
                    <div class="col-12 col-lg-4 col-xs-12 border-start">
                        <div class="fs-3 fw-semibold">
                            ₱
                            @if (Model.TotalBalance.HasValue)
                            {
                                @Model.TotalBalance.Value.ToString("#,##0.00")
                            }
                        </div>
                        <div class="fs-sm fw-semibold text-uppercase text-muted">Balance</div>
                    </div>
                </div>
            </div>
        </div>
    }




</div>

